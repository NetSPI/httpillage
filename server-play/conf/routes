# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HealthController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /health                 controllers.HealthController.index

GET     /poll                       controllers.DispatcherController.poll()
GET     /poll/:nodeId               controllers.DispatcherController.pollFromNode(nodeId: Int)
GET     /poll/:nodeId/:jobId        controllers.DispatcherController.pollFromNodeForJob(nodeId: Int, jobId: Int)

POST     /checkin/:nodeId/:jobId/:statusCode    controllers.DispatcherController.checkin(nodeId: Int, jobId: Int, statusCode: Int)

GET     /jobs                       controllers.JobController.index()
GET     /jobs/:jobId                    controllers.JobController.getJob(jobId: Int)
POST    /jobs                          controllers.JobController.create()
PUT     /jobs/:jobId                    controllers.JobController.updateJob(jobId: Int)
DELETE  /jobs/:jobId                    controllers.JobController.deleteJob(jobId: Int)

# Get the progress of a bruteforce attack
GET     /jobs/:jobId/progress           controllers.BruteforceProgressController.getProgress(jobId: Int)

# Get job responses
GET     /jobs/:jobId/responses              controllers.JobResponseController.getResponses(jobId: Int)
GET     /jobs/:jobId/response/:responseId   controllers.JobResponseController.getResponse(jobId: Int, responseId: Int)

POST    /jobs/:jobId/saveResponse      controllers.JobResponseController.create(jobId: Int)
POST    /jobs/:jobId/saveMatch         controllers.JobMatchController.create(jobId: Int)


# Grab a list of nodes
GET     /nodes                          controllers.NodeController.index()

# Handle upload / use of dictionary files
GET     /dictionaries                   controllers.DictionaryController.index()
GET     /dictionaries/:dictionaryId     controllers.DictionaryController.getDictionary(dictionaryId: Int)
POST    /dictionaries                   controllers.DictionaryController.create()
DELETE  /dictionaries/:dictionaryId     controllers.DictionaryController.deleteDictionary(dictionaryId: Int)




