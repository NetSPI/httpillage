<!DOCTYPE html>
<html>
<head>
  <title>Server</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag  'https://nvisium.com/stylesheets/global.css' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<nav class="nav-menu row">
			<div class="float-left">
        <%= image_tag 'nvisium_logo.png', {:class => 'logo', :alt => 'nVisium logo'} %>
  			<%= link_to 'Jobs', '/jobs', {:class => 'nav-link link-primary'} %>
  			<%= link_to 'Nodes', '/nodes', {:class => 'nav-link link-primary'} %>
  			<%= link_to 'Dictionaries', '/dictionaries', {:class => 'nav-link link-primary'} %>

        <% if current_user.try(:admin?) %>
          <%= link_to 'Users', '/users', { :class => 'nav-link link-primary' } %>
        <% end %>
        </div>
        <div class="float-right">
          <%= render "layouts/shared/user_menu" if current_user %>
        </div>
		</nav>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
		<%= yield %>
	</div>

</body>
</html>
